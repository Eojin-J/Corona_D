<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        tools:layout_editor_absoluteX="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/text_total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="전일 확진자"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#3CADCA"/>
            <TextView
                android:id="@+id/text_total2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="20 명"
                android:textAlignment="center"
                android:textColor="#3CADCA"
                android:background="#E2EDF6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/text_release"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="전일 격리 해제 수"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#3CADCA"/>
            <TextView
                android:id="@+id/text_release2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0 명"
                android:textAlignment="center"
                android:textColor="#3CADCA"
                android:background="#E2EDF6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/text_quarantine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="현재 격리 인원"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#3CADCA"/>
            <TextView
                android:id="@+id/text_quarantine2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="19 명"
                android:textAlignment="center"
                android:textColor="#3CADCA"
                android:background="#E2EDF6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/text_death"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="사망자 수 "
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#3CADCA"/>
            <TextView
                android:id="@+id/text_death2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1 명"
                android:textAlignment="center"
                android:textColor="#3CADCA"
                android:background="#E2EDF6" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:text="대전 현황 자세히"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="btn1"/>

